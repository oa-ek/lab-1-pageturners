@model List<PageTurners.Core.Entities.BookRequest>
@using PageTurners.Core.Entities


@{
    ViewData["Title"] = "Книги з запитами";
}

<h1>Книги з запитами</h1>

@if (Model.Count > 0)
{
    <div class="container">
        <div class="row">
            @foreach (var book in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">@book.Title</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@book.Author</h6>
                            <p class="card-text">@book.Desc</p>
                            <a href="/book/details/@book.Id" class="btn btn-primary btn-sm">Детальніше</a>
                            @if (User.IsInRole("Moderator"))
                            {
                                <form asp-controller="Book" asp-action="PublishBook" asp-route-bookId="@book.Id" method="post">
                                    <button type="submit" class="btn btn-success btn-sm">Опублікувати</button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
}
else
{
    <p>На жаль, книги з запитами відсутні.</p>
}
