@model List<PageTurners.Core.Entities.BookRequest>
@using PageTurners.Core.Entities

@{
    ViewData["Title"] = "Книги з запитами";
}

<h1>Книги з запитами</h1>

@if (Model.Count > 0)
{
    <div class="container">
        <div class="row">
            @foreach (var book in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                    <div class="card mb-4">
                        <img src="@book.CoverPath" class="card-img-top" alt="Book Cover">
                        <div class="card-body">
                            <h5 class="card-title">@book.Title</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@book.Author</h6>
                            <p class="card-text">@book.Desc</p>

                            <form asp-controller="BookRequest" asp-action="PublishBook" asp-route-bookRequestId="@book.Id" method="post">
                                <button type="submit" class="btn-custom">Опублікувати</button>
                            </form>

                            <form asp-controller="BookRequest" asp-action="DeleteBookRequest" asp-route-bookRequestId="@book.Id" method="post">
                                <button type="submit" class="btn-custom-danger">Видалити</button>
                            </form>

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <p>На жаль, книги з запитами відсутні.</p>
}




<style>

    body {
        background-image: url('/images/back.jpg');
        background-size: cover; /* Масштабування зображення, щоб воно покривало всю сторінку */
        background-repeat: no-repeat; /* Вимкнення повторення зображення */
        background-attachment: fixed; /* Фон залишається фіксованим під час прокручування сторінки */
    }

    /* Основний стиль кнопок */
    .btn-custom {
        background-color: #FFA500;
        color: #fff;
        border: none;
        box-shadow: 2px 2px 4px #888888; /* Тінь */
        padding: 10px 20px;
        transition: background-color 0.3s, transform 0.2s; /* Плавне зміна кольору та інтерактив на наведенні */
        display: inline-flex; /* Використовуємо Flexbox для розтягування */
        align-items: center; /* Вирівнюємо по вертикалі */
    }

        /* Стиль кнопок при наведенні */
        .btn-custom:hover {
            background-color: #FF6600;
            transform: scale(1.05); /* Збільшує розмір кнопки на наведенні */
        }

    /* DANGER стиль кнопок */
    .btn-custom-danger {
        background-color: #bd1d08;
        color: #fff;
        border: none;
        box-shadow: 2px 2px 4px #888888;
        padding: 10px 20px;
        transition: background-color 0.3s, transform 0.2s;
        display: inline-flex; /* Використовуємо Flexbox для розтягування */
        align-items: center; /* Вирівнюємо по вертикалі */
    }

        .btn-custom-danger:hover {
            background-color: #851e10;
            transform: scale(1.05);
        }

    .btn-custom-details {
        background-color: #ebc334;
        color: #fff;
        border: none;
        box-shadow: 2px 2px 4px #000000;
        padding: 10px 20px;
        transition: background-color 0.3s, transform 0.2s; /* Плавне зміна кольору та інтерактив на наведенні */
        display: inline-flex;
        align-items: center;
    }


        .btn-custom-details:hover {
            background-color: #c99e00;
            transform: scale(1.05);
        }
</style>