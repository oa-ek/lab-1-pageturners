@using PageTurners.Core.Entities

@model IEnumerable<Book>


<!-- Код для відображення списку лайкнутих книг -->
<div class="container">
    <h1 class="display-4"><b>Лайкнуті книги</b></h1>
    <hr />

    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">@book.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@book.Author</h6>
                        

                        <a href="/Book/Details/@book.Id" class="btn-custom-details">Детальніше</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
