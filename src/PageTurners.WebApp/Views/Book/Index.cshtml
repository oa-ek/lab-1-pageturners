@using PageTurners.Core.Entities

@model IEnumerable<Book>

@{
    ViewData["Title"] = "Список книг";
}

<style>
    .card {
        height: 100%;
    }
</style>

<div class="container">
    <h1 class="display-4">Книги для обговорення</h1>
    <hr />

    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">@book.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@book.Author</h6>
                        <p class="card-text">@book.Desc</p>
                        <a href="/book/details/@book.Id" class="btn btn-primary btn-sm">Детальніше</a>
                    </div>
                </div>
            </div>
        }
        <a asp-controller="BookManagement" asp-action="AddBook" asp-area="" class="nav-link">Додати книгу</a>
    </div>
</div>
