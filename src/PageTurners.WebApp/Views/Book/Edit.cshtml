@model PageTurners.Core.Entities.Book

@{
    ViewData["Title"] = "Редагувати книгу";
}

<h1>Редагувати книгу</h1>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Title">Назва:</label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Author">Автор:</label>
        <input asp-for="Author" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Genre">Жанр:</label>
        <input asp-for="Genre" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Edition">Видавництво:</label>
        <input asp-for="Edition" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Desc">Опис:</label>
        <textarea asp-for="Desc" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="DatePubl">Рік видання:</label>
        <input asp-for="DatePubl" class="form-control" />
    </div>
  

    <button type="submit" class="btn btn-primary">Зберегти зміни</button>
</form>
